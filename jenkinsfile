pipeline {
	agent any
	tools {
		maven 'maven'
	}
	stages {
		stage('clone-repo'){
			steps {
				checkout scm
			}
		}
		stage('Build') {
			steps {
				sh 'mvn clean install'
			}
		}
		stage('sonarqube-scanging'){
			steps {
				withSonarQubeEnv('my-sonarqube-server') {
					sh 'mvn clean sonar:sonar'
				}
			}
		}
		stage('quality-gate-check'){
			steps {
				sh 'sleep 30s'
				waitForQualityGate abortPipeline: true
			}
		}
	}
}		
